{
    "name": "@applitest/test-runner",
    "version": "0.9.90",
    "description": "Applitest Test Runner Library: Extends webdiriver.io (web and mobile) allowing to provide a json base tests configuration and activate tests locally or via cloud services",
    "main": "dist/lib/index.js",
    "types": "dist/lib/index.d.ts",
    "scripts": {
        "test": "echo \"Error: no test specified\"",
        "build": "tsc && npm run copy-assets",
        "copy-assets": "xcopy src\\lib\\version.json dist\\lib\\ /Y",
        "build:watch": "tsc --watch",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "cli": "npm run build && node ./dist/cli/index.js",
        "cli:dev": "ts-node ./src/cli/index.ts",
        "cli:debug": "npm run build && node --inspect ./dist/cli/index.js -c ./samples/json/sample.json",
        "api": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./cmd/start-api.ps1",
        "api:only": "npm run build && node ./dist/api/app.js",
        "api:only:dev": "ts-node ./src/api/app.ts",
        "api:only:debug": "npm run build && nodemon --inspect ./dist/api/app.js",
        "api:debug:ts": "nodemon --exec \"node --inspect -r ts-node/register\" ./src/api/app.ts",
        "api:debug:ts:break": "nodemon --exec \"node --inspect-brk -r ts-node/register\" ./src/api/app.ts",
        "api:debug:simple": "node --inspect -r ts-node/register ./src/api/app.ts",
        "build:windows": "@powershell -NoProfile -Command ./cmd/build.ps1",
        "build:linux": "sh ./cmd/build.sh",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix ."
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Applitest-co-il/test-runner.git"
    },
    "keywords": [
        "appium",
        "selenium",
        "webdriverio"
    ],
    "author": "Daniel Yaghil",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Applitest-co-il/test-runner/issues"
    },
    "homepage": "https://github.com/Applitest-co-il/test-runner#readme",
    "dependencies": {
        "@danielyaghil/vm-helper": "^0.9.12",
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "ajv": "^8.17.1",
        "axios": "^1.12.2",
        "commander": "^11.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^5.1.0",
        "jimp": "^1.6.0",
        "jmespath": "^0.16.0",
        "puppeteer-core": "^24.26.1",
        "randomstring": "^1.3.1",
        "set-interval-async": "^3.0.3",
        "uuid": "^9.0.1",
        "webdriverio": "^9.20.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jimp": "^0.2.1",
        "@types/jmespath": "^0.15.2",
        "@types/node": "^24.10.0",
        "@types/randomstring": "^1.3.0",
        "@types/uuid": "^10.0.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^9.1.2",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "serverless": "^3.40.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    }
}
