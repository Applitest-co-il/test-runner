{
    "name": "test-runner",
    "version": "0.9.2",
    "description": "applitest manager test runner",
    "scripts": {
        "test": "node --inspect ./src/index.js --conf ./samples/json/test.json",
        "start": "node ./src/cli/index.js",
        "cli": "node ./src/cli/index.js",
        "cli:start:web": "node --inspect  ./src/cli/index.js --conf ./samples/json/run-web-il-us.json",
        "cli:start": "node ./src/cli/index.js --conf ./samples/json/hagai-test.json",
        "cli:start:debug": "node --inspect  ./src/cli/index.js --conf ./samples/json/hagai-test.json",
        "cli:testaws": "node  ./src/cli/index.js --conf ./hagai-test.json",
        "api": "@powershell -NoProfile -ExecutionPolicy Unrestricted -Command ./src/api/start-api.ps1",
        "api:start": "node ./src/api/app.js",
        "api:start:debug": "node --inspect ./src/api/app.js",
        "api:start:dev:debug": "nodemon --inspect ./src/api/app.js",
        "build": "@powershell -NoProfile -Command ./build.ps1"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Applitest-co-il/test-runner.git"
    },
    "keywords": [
        "appium",
        "selenium",
        "webdriverio"
    ],
    "author": "Daniel Yaghil",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Applitest-co-il/test-runner/issues"
    },
    "homepage": "https://github.com/Applitest-co-il/test-runner#readme",
    "dependencies": {
        "axios": "^1.7.2",
        "commander": "^11.1.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "webdriverio": "^8.39.1"
    },
    "devDependencies": {
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.1.0",
        "prettier": "^3.2.5"
    }
}
