{
    "name": "@applitest/test-runner",
    "version": "0.10.21",
    "description": "Applitest Test Runner Library: Extends webdriver.io (web and mobile) allowing to provide a json base tests configuration and activate tests locally or via cloud services",
    "main": "dist/lib/index.js",
    "types": "dist/lib/index.d.ts",
    "bin": {
        "trserver": "./dist/api/index.js"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\"",
        "build:dev": "npm run prebuild && tsc && npm run copy-assets",
        "build:prod": "tsc && node scripts/update-version.js",
        "copy-assets": "copy src\\lib\\version.json dist\\lib\\ /Y",
        "clean": "rimraf dist",
        "prebuild": "npm run clean",
        "api": "npm run build:dev && node ./dist/api/index.js",
        "api:debug": "nodemon",
        "format:check": "prettier --check .",
        "format:write": "prettier --write .",
        "lint:check": "eslint .",
        "lint:fix": "eslint --fix .",
        "type:check": "tsc --noEmit",
        "check": "npm run format:check && npm run lint:check && npm run type:check"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Applitest-co-il/test-runner.git"
    },
    "keywords": [
        "appium",
        "selenium",
        "webdriverio"
    ],
    "author": "Daniel Yaghil",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Applitest-co-il/test-runner/issues"
    },
    "homepage": "https://github.com/Applitest-co-il/test-runner#readme",
    "dependencies": {
        "@danielyaghil/vm-helper": "^0.9.12",
        "@ffmpeg-installer/ffmpeg": "^1.1.0",
        "ajv": "^8.17.1",
        "axios": "^1.12.2",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "jimp": "^1.6.0",
        "jmespath": "^0.16.0",
        "puppeteer-core": "^24.26.1",
        "randomstring": "^1.3.1",
        "set-interval-async": "^3.0.3",
        "webdriverio": "^9.20.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jimp": "^0.2.1",
        "@types/jmespath": "^0.15.2",
        "@types/node": "^24.10.0",
        "@types/randomstring": "^1.3.0",
        "@typescript-eslint/eslint-plugin": "^8.46.4",
        "@typescript-eslint/parser": "^8.46.4",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3"
    },
    "applitest": {
        "mincompatibleversion": "0.10.21"
    }
}
